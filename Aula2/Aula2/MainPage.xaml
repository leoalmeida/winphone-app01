<Page
    x:Class="Aula2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aula2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/grungy_background-wallpaper-640x480.jpg" Opacity="0.5" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,219,0,0" VerticalAlignment="Top" Click="button_Click" Width="340"/>
        <TextBox x:Name="txtAnoNasc" Margin="10,182,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PlaceholderText="Data de Nascimento"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="10,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="340" PlaceholderText="Nome"/>
        <TextBlock x:Name="label1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Cálculo da Idade" VerticalAlignment="Top" Height="70" Width="340" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Page>
